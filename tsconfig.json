{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictFunctionTypes": false,
    "outDir": "dist",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/**/*"
      ],
      "alias": {
        "test": "./test",
        "underscore": "lodash"
      }
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
